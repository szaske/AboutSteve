<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.code_samples.PassDataActivity">

        <Button
            android:id="@+id/passDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Passing Data"
            app:layout_constraintLeft_toRightOf="@+id/titleInput"
            tools:layout_editor_absoluteY="81dp" />

        <EditText
            android:id="@+id/titleInput"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint=" enter title"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/passDataButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/passDataButton"
            app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
